<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="layouts.StackLayoutDemo"
             Title="StackLayoutDemo">
   <!-- <StackLayout VerticalOptions="Center" Spacing="10" > -->
    <StackLayout  >    <!-- Najczęjściej jako element strony     -->
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Start" 
            BackgroundColor="AliceBlue"/>
         <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            BackgroundColor="DarkBlue"/>
        <Label 
             Text="Welcome to .NET MAUI!"
             VerticalOptions="Center" 
             HorizontalOptions="EndAndExpand"
             BackgroundColor="DarkRed"/>
        <Label 
             Text="Welcome to .NET MAUI!"
             VerticalOptions="Center" 
             HorizontalOptions="Center"
             BackgroundColor="DarkCyan"/>
        <Label 
              Text="Welcome to .NET MAUI!"
              VerticalOptions="FillAndExpand" <!-- wypełnia całą dostępną przestrzeń w pionie -->
            HorizontalOptions="FillAndExpand" <!-- wypełnia całą dostępną przestrzeń w poziomie -->
              BackgroundColor="Brown"/>

    </StackLayout>
</ContentPage>